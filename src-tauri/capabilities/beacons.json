{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "beacons",
  "description": "Enables more specific functions to interact with the beacon file",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/data"
        },
        {
          "path": "$APPDATA/data/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/data"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/data/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/data/*"
        }
      ]
    }
  ]
}